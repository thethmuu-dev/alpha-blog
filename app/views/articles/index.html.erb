<div id="page-content">
  <h1 class="text-center mt-4">All Articles</h1>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row mb-4">
        <div class="col-8 mx-auto">
          <div class="card rounded-0 border-0 text-center shadow">
            <div class="card-header bg-white font-italic">
              by THES
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <%= link_to "View", article_path(article), class: "btn btn-sm btn-outline-success mr-2" %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-outline-info mr-2" %>
              <%= link_to "Delete", article_path(article), method: :delete, class: "btn btn-sm btn-outline-danger mr-2" %>
            </div>
            <div class="card-footer text-muted text-sm bg-white">
              Created <%= time_ago_in_words(article.created_at) %> ago |
              Update <%= time_ago_in_words(article.updated_at) %> ago
            </div>
          </div>
        </div>    
      </div>
    <% end %>
  </div>
</div>