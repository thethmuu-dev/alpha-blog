<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'includes/errors' %>        
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-white rounded-lg") do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 8, class: "form-control", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group mb-0 row justify-content-center">
          <%= form.submit class: "btn btn-outline-dark btn-lg" %>
        </div>                                      
      <% end %>
    </div>

  </div>
  <div class="mb-3">
    <%= link_to '[ Back ]', articles_path %>
  </div>
</div>